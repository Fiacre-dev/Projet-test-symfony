{% extends 'base.html.twig' %}

{% block title %} SymRecipe - Mes recettes {% endblock %}

{% block body %}
    {% if not recipes.items is same as([]) %}
        <div class="container mt-4">
            <h1>Mes recettes </h1>
            <a href="{{ path('recipe.new') }}" class="btn btn-primary"> Créer un recette </a>
            <div class="count mt-4">
                <h4>Il y a {{ recipes.getTotalItemCount }} recettes au total</h4>
            </div>

            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Numéro</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Dificulté</th>
                    <th scope="col">Date de creation</th>
                    <th scope="col">Edition</th>
                    <th scope="col">Suppression</th>
                </tr>
                </thead>
                <tbody>
                {% for recipe in recipes %}
                    <tr class="table-primary">
                        <th scope="row">{{ recipe.id }}</th>
                        <td>{{ recipe.name }} </td>
                        <td>
                            {% if recipe.price is null %}
                                Non renseigné
                            {% else %}
                                {{ recipe.price }}

                            {% endif %}
                        </td>
                        <td>
                            {% if recipe.difficulty is null %}
                                Non renseigné
                            {% else %}
                                {{ recipe.difficulty }}

                            {% endif %}
                        </td>
                        <td>{{ recipe.createdAt|date("d/m/Y") }}</td>
                        <td>
                            Todo
                        </td>
                        <td>
                            Todo
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation d-flex justify-content-center mt-4">
                {{ knp_pagination_render(recipes) }}
            </div>
        </div>
    {% else %}
        <h4>Il n'y pas de recettes</h4>
    {% endif %}
{% endblock %}
